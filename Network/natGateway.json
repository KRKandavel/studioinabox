{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for the resources."
            }
        },
        "natGWName": {
            "type": "string",
            "defaultValue": "HXNATGateway"
        },
        "natGWPublicIP": {
            "defaultValue": "myPublicIPVM",
            "type": "String",
            "metadata": {
                "description": "Name of the virtual machine public IP"
            }
        },
        "natGWPublicIPPrefix": {
            "defaultValue": "",
            "type": "String",
            "metadata": {
                "description": "Name of the NAT gateway public IP"
            }
        },
        "zone": {
            "defaultValue": "",
            "type": "String",
            "metadata": {
                "description": "Name of the NAT gateway zones"
            }
        }
    },
    "variables": {
        "zones": [
            "[parameters('zone')]"
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Network/natGateways",
            "apiVersion": "2020-06-01",
            "name": "[parameters('natGWName')]",
            "location": "[parameters('location')]",
            "tags": {

            },
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "idleTimeoutInMinutes": 4,
                "publicIpAddresses": [
                    {
                        "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('natGWPublicIP'))]"
                    }
                ],
                "publicIpPrefixes": [
                ]
            },
            "zones": "[if(not(equals(parameters('zone'),'')),variables('zones'),'')]",
            "dependsOn": [
            ]
        }
    ],
    "outputs": {
        "resourceID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/natGateways', parameters('natGWName'))]"
        }
    }
}
