{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceGroupName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]",
            "metadata": {
                "description": "Name of the resource group for the existing virtual network"
            }
        },
        "vnetName": {
            "defaultValue": "HXVNET",
            "type": "String"
        },
        "subnetName": {
            "defaultValue": "PrivateSubnet0",
            "type": "String"
        },
        "natGWName": {
            "defaultValue": "HXGWName",
            "type": "String"
        },
        "environment": {
            "defaultValue": "dev",
            "type": "String"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for the resources."
            }
        }
    },
    "variables": {
        "natGWExists": "[if(equals(parameters('natGWName'), ''), 'none', 'exists')]",
        "natGatewayId": {
            "id": "[resourceId(parameters('resourceGroupName'), 'Microsoft.Network/natGateways', parameters('natGWName'))]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-05-01",
            "name": "[concat(parameters('vnetName'), '/', parameters('subnetName'))]",
            "dependsOn": [
                "[reference(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')))]"
            ],
            "properties": {
                "natGateway": {
                    "id": "[if(not(equals(variables('natGWExists'), 'none')), variables('natGatewayId'), json('null'))]"

                }
            }
        }
    ],
    "outputs": {
        "greetingMessage": {
            "value": "Hello World",
            "type": "string"
        }
    }
}
